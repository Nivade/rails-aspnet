@model Rails.Models.TramPlacementViewModel

@using (Html.BeginForm("PlaceTram", "Tram", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Sector)
    @Html.HiddenFor(model => model.SectorId)
    <div class="row">

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Tram.Number, new { @class = "col-md-2 control-label" })
            <div class="col-xs-3">
                @Html.DropDownListFor(model => model.TramId, new SelectList(Model.Trams, "Id", "Number"), htmlAttributes: new
                {
                    @class = "form-control"
                })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Place"/>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

