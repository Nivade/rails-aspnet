@model Rails.Areas.Remise.Models.RemiseTramPlacementModel




@using (Html.BeginForm("Placement", "Home", method: FormMethod.Post))
{
    @Html.HiddenFor(model => model.SectorNumber);
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">@Html.DisplayNameFor(model => model.TramNumber)</span>
            <span class="input-group-button">
                                @Html.DropDownListFor(model => model.TramNumber, new SelectList(ViewBag.Trams, "Number", "Number"), htmlAttributes: new { @class = "form-control" })
                                <input type="submit" class="btn btn-default" value="Plaatsen" />
            </span>
        </div>
            
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

