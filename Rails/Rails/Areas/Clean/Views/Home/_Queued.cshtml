@using Microsoft.AspNet.Identity
@model IEnumerable<Rails.Areas.Clean.Models.CleanQueueViewModel>

<h2>Wachtlijst</h2>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th class="col-xs-4">
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th class="col-xs-4">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="col-xs-4">
            @Html.DisplayNameFor(model => model.QueuedSince)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QueuedSince)
        </td>
        

        @if (User.IsInRole("Schoonmaker"))
        {
            <td>
                @Html.ActionLink("Start", "Start", routeValues: new { number = item.Number, userId = User.Identity.GetUserId()})
            </td>
        }
        
    </tr>
         
    }

</table>