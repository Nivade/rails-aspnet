@using System.Collections
@model Rails.Models.View.TramMaintenanceSchedulePendingViewModel


@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-xs-2">
                
                @Html.TextBoxFor(model => model.SelectedStartDate, "", new { @class = "form-control date-picker", @type = "date" })
                @Html.ValidationMessageFor(model => model.SelectedStartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                @Html.DropDownListFor(model => model.SelectedTechnician, new SelectList((IEnumerable)ViewData["Technicians"], "Id", "FirstName"), null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedTechnician, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<!-- jQuery UI CSS Reference -->
<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
</script>
